#include <stdio.h>
#include <math.h>


struct Point
{
    int x[10];
    int y[10];
}pt;

int main(void)
{
    double distance;

    int a = 0, b = 0;
    int c = 0;
    int d = 0;
    printf("Point 1: ");
    scanf("%d %d", &, &b);
    printf("Point 2: ");
    scanf("%d %d", &c, &d);
    
    pt.x[0] = 1, pt.y[0] = 2;
    pt.x[1] = 3, pt.y[1] = 4;

    int xValue = pt.x[1] - pt.x[0];
    int yValue = pt.y[1] - pt.y[0];

    distance = sqrt(pow(xValue, 2) + pow(yValue, 2));
    printf("Point1: (%d, %d)\n", pt.x[0], pt.y[0]);
    printf("Point2: (%d, %d)\n", pt.x[1], pt.y[1]);
    printf("Distance: %.2f\n", distance);
}
